<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCITE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebCITE.styles.css" asp-append-version="true" />
</head>
<body class="m-0 p-0">
    <header class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <a href="#" class="navbar-brand">
                <img src="~/images/logo.png" class="logoImg d-inline-block" />
                <span class="title ms-2" style="vertical-align:middle">DLSL-SG CITE</span>
            </a>
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#toggleMobileMenu"
                    aria-controls="toggleMobileMenu" aria-expanded="false" aria-label="Toggle Navigation">
                    <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="toggleMobileMenu">
                <ul class="navbar-nav text-center ms-auto">
                    <li>
                        <a class="nav-link"  asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li>
                        <a class="nav-link"  asp-area="" asp-page="/News">News</a>
                    </li>
                    <li>
                        <a class="nav-link"  asp-area="" asp-page="/Hotlines">Hotlines</a>
                    </li>
                    <li>
                        <a class="nav-link"  asp-area="" asp-page="/ELibrary">E-Library</a>
                    </li>
                    <li>
                        <a class="nav-link"  asp-area="" asp-page="/About">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span style="font-size:1vw">Copyright © De La Salle Lipa, Student Government - College of Information Technology and Engineering Council</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>